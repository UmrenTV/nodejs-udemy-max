extends layouts/main-layout.pug
block styles
    link(rel="stylesheet", href="/css/forms.css")
    link(rel="stylesheet", href="/css/product.css")
block content
  main
    if prods.length > 0
      .grid
        each product in prods
          article.card.product-item
            header.card__header
              h1.product__title #{product.title}
            .card__image
              img(src="https://img.freepik.com/free-photo/book-composition-with-open-book_23-2147690555.jpg", alt="Book")
            .card__content 
              h2.product__price $19.99
              p.product__description A nice book.
            .card__actions
              button.btn Add to Cart
    else
      h1 No products to show :(
